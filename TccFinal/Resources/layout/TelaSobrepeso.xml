
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF4BEBDB">

    <TextView
        android:text="Sua situação é de sobrepeso!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />
    <TextView
        android:text="Sobrepeso indica que a pessoa está acima do peso considerado normal para a idade ou tamanho que ela possui. Essa é uma condição que atinge muitas pessoas, e se não tratada pode levar a obesidade."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <TextView
        android:text="Passo 1: Alimentação."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />
    <ImageButton
        android:src="@drawable/ali"
         android:layout_height="85.0dp"
         android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:id="@id/imgAlimentacao"
        android:layout_marginBottom="0.0dp"
        />
    <TextView
        android:text="Passo 2: Perda de massa."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />
    <ImageButton
        android:src="@drawable/perd"
        android:layout_width="match_parent"
        android:layout_height="98.5dp"
        android:scaleType="centerCrop"
        android:id="@+id/imgPercaDeMassa"
         />
    <TextView
        android:text="Passo 3: Definição"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />
    <ImageButton
        android:src="@drawable/exe"
        android:layout_width="match_parent"
        android:layout_height="96.0dp"
        android:scaleType="centerCrop"
        android:id="@id/imgExercicios"
         />


</LinearLayout>