<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p1="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView1"
    android:background="#ffdc6b07">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light">
    <TextView
        android:text="Sua situação é de sobrepeso!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textColor="@android:color/background_dark" />
    <TextView
        android:text="Sobrepeso indica que a pessoa está acima do peso considerado normal para a idade ou tamanho que ela possui. Essa é uma condição que atinge muitas pessoas, e se não tratada pode levar a obesidade."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/background_dark" />
    <TextView
        android:text="Passo 1: Alimentação."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark" />
    <ImageButton
        android:src="@drawable/alimen"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/imageButton1" />
    <TextView
        android:text="Passo 2: Perda de massa."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark" />
    <ImageButton
        android:src="@drawable/perda"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/imageButton2" />
    <TextView
        android:text="Passo 3: Definição"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark" />
    <ImageButton
        android:src="@drawable/ganho"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/imageButton3" />
</LinearLayout>
</ScrollView>