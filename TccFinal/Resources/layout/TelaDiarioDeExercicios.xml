
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff99f3bd">
    <TextView
        android:text="Usuario"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView4"
        android:textColor="@android:color/background_dark" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/txtUsuario"
        android:textColor="@android:color/background_dark"
        android:background="@android:color/background_light"/>
    <TextView
        android:text="Descrição do exercício"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:textColor="@android:color/background_dark" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="66.5dp"
        android:id="@+id/txtExercicio"
        android:textColor="@android:color/background_dark"
        android:background="@android:color/background_light"
        android:layout_marginBottom="0.0dp" />
    <TextView
        android:text="Tempo de exercicio"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@android:color/background_dark" />
    <EditText
        android:inputType="time"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:id="@+id/txtTempo"
        android:background="@android:color/background_light"
        android:layout_marginBottom="0.0dp" />
    <TextView
        android:text="Data"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt4"
        android:textColor="@android:color/background_dark" />
    <EditText
        android:inputType="date"
        android:layout_width="match_parent"
        android:layout_height="47.5dp"
        android:id="@+id/txtData"
        android:background="@android:color/background_light" />
    <TextView
        android:text="Peso"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt3"
        android:textColor="@android:color/background_dark" />
    <EditText
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="49.5dp"
        android:id="@+id/txtRegistroDePeso"
        android:background="@android:color/background_light" />
    <Button
        android:text="Registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCadastrarDiario"
        android:textColor="@android:color/background_dark" />

</LinearLayout>