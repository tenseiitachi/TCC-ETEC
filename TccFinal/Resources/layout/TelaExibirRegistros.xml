
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF4BEBDB"
    android:minWidth="25px"
    android:minHeight="25px">
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnDados"
          android:layout_marginBottom="20dp"/>
    <TextView
        android:text="Usuario"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/background_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_gravity="center"
        android:textAlignment="center"/>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtExibirUsuario"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="20dp" />
    <TextView
        android:text="Exercicio"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@android:color/background_dark"
        android:layout_gravity="center"
        android:textAlignment="center"/>
    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtExibirExercicio"
        android:textColor="@android:color/background_dark"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:text="Data"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/textView5" 
        />
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/txtExibirData"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:text="Peso"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textColor="@android:color/background_dark"
        android:layout_gravity="center"
        android:textAlignment="center"/>
    <TextView
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/txtExibirPeso"
        android:layout_marginBottom="20dp"
   />
    <TextView
        android:text="Tempo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/textView9"
      />
    <TextView
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtExibirTempo"
        android:textColor="@android:color/background_dark"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
       />

</LinearLayout>