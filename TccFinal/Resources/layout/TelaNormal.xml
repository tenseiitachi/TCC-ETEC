<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF4BEBDB">
    <TextView
        android:text="Sua situação é Normal."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:textColor="@android:color/background_dark" />
    <TextView
        android:text="O equilíbrio corporal (resultado do nosso peso em relação à nossa altura) é um dos mais criteriosos preceitos da vida saudável, contudo, parece ainda está longe de ser alcançado pelas pessoas. De acordo com o Ministério da Saúde, metade da população brasileira está fora de seus padrões -tanto para a obesidade, quanto para a magreza excessiva-e a falta de cuidados com a alimentação é um dos principais fatores dessa ocorrência."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/background_dark" />
    <TextView
        android:text="Passo 1: Alimentação"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@android:color/background_dark" />
    <ImageButton

               android:src="@drawable/ali"
         android:layout_height="85.0dp"
         android:scaleType="centerCrop"
        android:layout_width="match_parent"

        android:id="@+id/imgAlimentacao" />
    <TextView
        android:text="Passo 2: Exercícios"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="@android:color/background_dark" />
    <ImageButton

        android:src="@drawable/exe"
        android:layout_width="match_parent"
        android:layout_height="96.0dp"
        android:scaleType="centerCrop"
        android:id="@+id/imgExercicios" />

</LinearLayout>
