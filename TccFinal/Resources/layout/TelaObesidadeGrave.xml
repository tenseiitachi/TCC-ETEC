<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff4bebdb">
    <TextView
        android:text="Sua situação é de Obesdidade grave!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:textColor="@android:color/background_dark" />
    <TextView
        android:text="O primeiro passo, tanto para tratar, como prevenir a obesidade, deve ser sempre o controle do consumo de calorias, calculado de acordo com a alimentação habitual e com a quantidade de peso que se deseja perder, de preferência com uma dieta rica em frutas, legumes, verduras, fibras e água, conforme orientada pelo nutricionista."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/background_dark" />
    <TextView
        android:text="Passo 1: Alimentação."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@android:color/background_dark" />
    <ImageButton
        android:src="@drawable/ali"
        android:layout_height="85.0dp"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:id="@id/imgAlimentacao" />
    <TextView
        android:text="Passo 2: Perda de peso."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="@android:color/background_dark" />
    <ImageButton
        android:src="@drawable/perd"
        android:layout_width="match_parent"
        android:layout_height="98.5dp"
        android:scaleType="centerCrop"
        android:id="@id/imgPercaDeMassa" />
    <TextView
        android:text="Passo 3: Definição."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@android:color/background_dark" />
    <ImageButton
        android:src="@drawable/exe"
        android:layout_width="match_parent"
        android:layout_height="96.0dp"
        android:scaleType="centerCrop"
        android:id="@id/imgExercicios" />

</LinearLayout>
