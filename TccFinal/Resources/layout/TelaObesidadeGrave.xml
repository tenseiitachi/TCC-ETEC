<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p1="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView1"
    android:background="#ffdc6b07">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light">
        <TextView
            android:text="Sua situação é de Obesdidade grave!"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/textView1" />
        <TextView
            android:text="O primeiro passo, tanto para tratar, como prevenir a obesidade, deve ser sempre o controle do consumo de calorias, calculado de acordo com a alimentação habitual e com a quantidade de peso que se deseja perder, de preferência com uma dieta rica em frutas, legumes, verduras, fibras e água, conforme orientada pelo nutricionista."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
        <TextView
            android:text="Passo 1: Alimentação."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />
        <ImageButton
            android:src="@drawable/alimen"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageButton1" />
        <TextView
            android:text="Passo 2: Perda de peso."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />
        <ImageButton
            android:src="@drawable/perda"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageButton2" />
        <TextView
            android:text="Passo 3: Definição."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />
        <ImageButton
            android:src="@drawable/ganho"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageButton3" />
    </LinearLayout>    
</ScrollView>
